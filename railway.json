{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan view:cache"
    },
    "deploy": {
      "runtime": "UNSPECIFIED",
      "numReplicas": 1,
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }